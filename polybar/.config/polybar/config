[colors]
background = #393D3F
foreground = #ffffff
foregroundalt = #c1c1c1
urgent = #FF6347
accent = #68A65E
accentalt = #508E46

[bar/top]
monitor = DP-2
width = 100%
height = 27
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

border-size = 0
border-color = #00000000

modules-left = i3 mpd
modules-center = date
modules-right = wired-network wireless-network volume battery

tray-position = right
tray-background = ${colors.accentalt}

font-0 = DejaVu Sans:pixelsize=11;2
font-1 = Ionicons:pixelsize=12;2

[bar/topalt]
inherit = bar/top
monitor = ${env:MONITOR:DVI-D-1}

modules-left = i3
modules-center = date
modules-right = volume battery

tray-position =

;-------------- i3 --------------

[module/i3]
type = internal/i3

; Only show workspaces defined on the same output as the bar
;
; Useful if you want to show monitor specific workspaces
; on different bars
;
; Default: false
pin-workspaces = true

; This will split the workspace name on ':'
; Default: false
strip-wsnumbers = false

; Sort the workspaces by index instead of the default
; sorting that groups the workspaces by output
; Default: false
index-sort = true

; Create click handler used to focus workspace
; Default: true
enable-click = true

; Create scroll handlers used to cycle workspaces
; Default: true
enable-scroll = false

; Wrap around when reaching the first/last workspace
; Default: true
wrapping-scroll = false

; Set the scroll cycle direction
; Default: true
reverse-scroll = false

; Use fuzzy (partial) matching on labels when assigning
; icons to workspaces
; Example: code;♚ will apply the icon to all workspaces
; containing 'code' in the label
; Default: false
fuzzy-match = true

; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)
format = <label-state> <label-mode>

; Available tokens:
;   %mode%
; Default: %mode%
label-mode = %mode%

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-focused = %index%
label-focused-padding = 2
label-focused-background = ${colors.accent}
label-focused-foreground = ${colors.foreground}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-unfocused = %index%
label-unfocused-padding = 2
label-unfocused-background = ${colors.accent}
label-unfocused-foreground = ${colors.background}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-visible = %index%
label-visible-padding = 2
label-visible-background = ${colors.accent}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent = %index%
label-urgent-padding = 2
label-urgent-background = ${colors.urgent}

;-------------- date --------------

[module/date]
type = internal/date
label-background = ${colors.accentalt}
label = %date% - %time%
label-padding = 2
date = %d/%m/%Y
time = %H:%M
interval = 5

;-------------- volume --------------

[module/volume]
type = internal/volume

master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default

speaker-mixer = Speaker
headphone-mixer = Headphone
headphone-id = 17

format-volume = <ramp-volume> <label-volume>
format-volume-padding = 2
format-volume-background = ${colors.accent}
format-volume-foreground = ${colors.foreground}

label-volume = %percentage%%
label-muted-padding = 2
label-muted-background = ${colors.accent}
label-muted-foreground = ${colors.foreground}

label-muted = 
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-headphones-0 = 

;-------------- battery --------------

[module/battery]
type = internal/battery
full-at = 98%

format-charging = <label-charging>
format-charging-padding = 2
format-charging-background = ${colors.accent}
label-charging =  %percentage%%

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-padding = 2
format-discharging-background = ${colors.accent}
label-discharging = %percentage%%

format-full = <ramp-capacity> <label-full>

label-full = 

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 

;-------------- mpd ------------------

[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600

format-online = <label-song>


label-song =  %artist% - %title%
label-song-background = ${colors.accentalt}
label-song-padding = 2
label-song-maxlen = 40
label-song-ellipsis = true

;-------------- wireless-network ---------

[module/wireless-network]
type = internal/network
interface = wlp3s0

format-connected = <ramp-signal> <label-connected>
format-connected-padding = 2
format-connected-background = ${colors.accentalt}

format-disconnected =
format-disconnected-padding = 2

label-connected = %essid%
label-connected-foreground = ${colors.foreground}

ramp-signal-0 = " "

;-------------- wired-network --------------

[module/wired-network]
type = internal/network
interface = eno1

format-connected = <ramp-signal> <label-connected>
format-connected-padding = 2
format-connected-background = ${colors.accentalt}

format-disconnected =
format-disconnected-padding = 2

label-connected =
label-connected-foreground = ${colors.foreground}

ramp-signal-0 = 
ramp-signal-padding = 2
