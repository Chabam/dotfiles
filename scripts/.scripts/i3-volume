pkill -RTMIN+10 i3blocks

case $BLOCK_BUTTON in
	1) pavucontrol & disown ;;
	3) pamixer -t ;;
	4) pamixer -i 5 ;;
	5) pamixer -d 5 ;;
esac

printpastatus() { [[ $(pamixer --get-mute) = "true" ]] && echo -n ðŸ”‡ && exit
echo ðŸ”Š $(pamixer --get-volume)% ;}
printpastatus
